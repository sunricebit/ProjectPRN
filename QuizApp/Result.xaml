<Window x:Class="QuizApp.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Title="Result" Height="300" Width="400">
    <Grid>
        <TextBlock Text="This is your result" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <!-- Hiển thị số điểm và số câu đã trả lời được -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="txtScore" Text="Score: 100" FontSize="20"/>
            <TextBlock x:Name="txtCorrectAnswer" Text="Correct Questions: 10/20" FontSize="16"/>
        </StackPanel>

        <!-- Nút Review -->
        <Button x:Name="btnReview" Content="Review" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="btnReview_Click"/>
    </Grid>
</Window>
